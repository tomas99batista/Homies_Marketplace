<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:android="http://schemas.android.com/apk/res/android">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:gravity="center"
            android:background="@drawable/roomaddhousebackground"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/NewplaceImage"
                android:hint="Image url"
                android:textSize="20sp"
                android:background="@drawable/search_edit_text"
                android:drawableStart="@drawable/ic_image"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                />

            <EditText
                android:id="@+id/New_place_title"
                android:hint="Name"
                android:background="@drawable/search_edit_text"
                android:drawableStart="@drawable/ic_name"
                android:textSize="20sp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                />

            <EditText
                android:id="@+id/New_place_city"
                android:hint="City"
                android:background="@drawable/search_edit_text"
                android:drawableStart="@drawable/ic_location"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:gravity="start"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/New_place_price"
                android:hint="Price"
                android:background="@drawable/search_edit_text"
                android:drawableStart="@drawable/ic_price"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:textSize="20sp"
                android:gravity="start"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/New_place_features"
                android:hint="Features"
                android:background="@drawable/search_edit_text"
                android:layout_width="match_parent"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:drawableStart="@drawable/ic_features"
                android:textSize="20sp"
                android:gravity="start"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/New_place_type"
                android:hint="Type"
                android:background="@drawable/search_edit_text"
                android:layout_width="match_parent"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:drawableStart="@drawable/ic_house"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/New_place_no_bedrooms"
                android:hint="Bedrooms"
                android:background="@drawable/search_edit_text"
                android:drawableStart="@drawable/ic_bedrooms"
                android:layout_width="match_parent"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:textSize="20sp"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/New_place_no_bathrooms"
                android:hint="Bathrooms"
                android:background="@drawable/search_edit_text"
                android:drawableStart="@drawable/ic_bathrooms"
                android:layout_marginEnd="16dp"
                android:layout_width="match_parent"
                android:layout_marginStart="16dp"
                android:textSize="20sp"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/submitHouse"
                android:text="Submit"
                android:textColor="#fff"
                android:background="@drawable/button_search_shape"
                android:layout_gravity="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
</LinearLayout>
