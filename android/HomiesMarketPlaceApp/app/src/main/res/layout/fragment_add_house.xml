<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/NewplaceImage"
                android:hint="Image url"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                />

            <EditText
                android:id="@+id/New_place_title"
                android:hint="Name"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"

                />

            <EditText
                android:id="@+id/New_place_city"
                android:hint="City"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:textSize="25sp"
                android:layout_marginStart="16dp"
                android:gravity="start"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/New_place_price"
                android:hint="price"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_marginStart="16dp"
                android:textSize="18sp"
                android:gravity="start"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/New_place_features"
                android:hint="features"
                android:layout_width="match_parent"
                android:layout_marginStart="16dp"
                android:textSize="18sp"
                android:gravity="start"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/New_place_type"
                android:hint="type"
                android:layout_width="match_parent"
                android:layout_marginStart="16dp"
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/New_place_no_bedrooms"
                android:hint="No bedrooms"
                android:layout_width="match_parent"
                android:layout_marginStart="16dp"
                android:textSize="15sp"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/New_place_no_bathrooms"
                android:hint="No bathrooms"
                android:layout_width="match_parent"
                android:layout_marginStart="16dp"
                android:textSize="15sp"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/submitHouse"
                android:text="Submit"
                android:layout_gravity="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>