<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_margin="2dp"
    app:cardElevation="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <ImageView
        android:id="@+id/favorite_place_image"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:scaleType="centerCrop" />



        <TextView
            android:id="@+id/favorite_place_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="start"
            android:maxLength="30"
            android:textColor="#000"
            android:textSize="17sp"
            app:layout_constraintBottom_toTopOf="@+id/favorite_place_location"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/favorite_place_location"
            android:layout_width="match_parent"
            android:layout_marginStart="16dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="start"
            android:textColor="#000"
            app:layout_constraintBottom_toTopOf="@+id/favorite_place_price"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/favorite_place_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="start"
            android:textColor="#000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


    </LinearLayout>
    <ImageButton
        android:id="@+id/remove_from_favorites"
        android:layout_width="wrap_content"
        android:src="@drawable/ic_remove"
        android:layout_gravity="top|end"
        android:layout_margin="8dp"
        android:layout_height="wrap_content"
        android:background="#fff"
        />
</androidx.cardview.widget.CardView>